{
  "name": "tgsr",
  "version": "0.1.0",
  "description": "a competitive online tag guessing game",
  "keywords": [
    "html",
    "tags",
    "game",
    "competitive",
    "online"
  ],
  "license": "MIT",
  "author": "dev@dschopper.de",
  "type": "module",
  "main": "src/server/index.ts",
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "dev": "concurrently -i --default-input-target=1 'pnpm run dev:server' 'pnpm run dev:client'",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "build": "pnpm exec vite build && pnpm exec tsc -p tsconfig.server.json",
    "preview": "vite preview",
    "start": "node dist/server/index.js",
    "test": "vitest"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "express": "^5.2.1",
    "nanoid": "^5.1.6",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "typescript": "^5.9.3",
    "vite": "^6.0.7",
    "vue": "^3.5.26",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.5",
    "@vitest/ui": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.1.2",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.4.0",
    "tsx": "^4.19.2",
    "vitest": "^4.0.16"
  }
}
