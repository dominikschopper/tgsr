{
  "name": "tgsr",
  "version": "0.1.0",
  "description": "a competitive online tag guessing game",
  "keywords": [
    "html",
    "tags",
    "game",
    "competitive",
    "online"
  ],
  "license": "MIT",
  "author": "dev@dschopper.de",
  "type": "module",
  "main": "src/server/index.ts",
  "scripts": {
    "dev": "concurrently -i --default-input-target=1 'npm run dev:server' 'npm run dev:client'",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "build": "vite build && tsc -p tsconfig.server.json",
    "preview": "vite preview",
    "start": "node dist/server/index.js",
    "test": "vitest"
  },
  "dependencies": {
    "express": "^5.2.1",
    "nanoid": "^5.1.6",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "vue": "^3.5.26",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vite": "^6.0.7",
    "vitest": "^4.0.16"
  }
}
